<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsuarioBloqueadoActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="50dp"
        android:src="@mipmap/ic_bloqueado"
        android:id="@+id/imgAviso"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aviso"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_below="@id/imgAviso"
        android:id="@+id/txtAviso"
        />

    <TextView
        android:layout_below="@id/txtAviso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:layout_marginHorizontal="50dp"
        android:text="@string/txt_usuario_bloqueado"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp" />

</RelativeLayout>